#!/bin/sh
cat > version.h << END_WARNING

/*
 * WARNING: This is an automatically generated file.
 *          Do not edit this file.
 *          To change the version edit the file VERSION
 */

END_WARNING
/bin/echo '#ifndef FLEDGE_NORTH_S2OPC_VERSION' >> version.h
/bin/echo '#define FLEDGE_NORTH_S2OPC_VERSION	"'`cat $1/VERSION`'"' >> version.h
/bin/echo '#endif' >> version.h
